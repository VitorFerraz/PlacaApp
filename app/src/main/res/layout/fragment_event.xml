<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.game.event.EventFragment"
    android:background="@drawable/background_menu">

    <TextView
        android:id="@+id/textView"
        style="@style/title_game_wizard"
        android:layout_width="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="@string/tv_start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        style="@style/subtitle_game_wizard"
        android:layout_width="0dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_event_name"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:hint="Ex.: Final do Mundial de Clubes 2019"
        style="@style/input_wizard"
        android:id="@+id/inputEvent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        android:inputType="" />

    <Button
        style="@style/custom_button"
        android:text="PrÃ³ximo"
        android:id="@+id/btNextStep"
        android:layout_marginTop="32dp"

        app:layout_constraintTop_toBottomOf="@+id/inputEvent"
        app:layout_constraintStart_toStartOf="@+id/inputEvent"
        app:layout_constraintEnd_toEndOf="@+id/inputEvent"/>

</androidx.constraintlayout.widget.ConstraintLayout>